.food-form
  %h1 編集
  = form_for @food do |f|
    -if @food.errors.any?
      .food-foom__errors
        %h2= "#{@food.errors.full_messages.count}件のエラーが発生しました。"
        %ul
          - @food.errors.full_messages.each do |message|
            %li= message
    .food-form__field.clearfix
      .food-form__field--left
        = f.label :name, "食べ物名", class: 'food-form__label'
      .food-form__field--right
        = f.text_field :name, step: "0.1", class: 'food_name food-form__input', placeholder: " 食べ物名 を入力してください", required: ""
      .food-form__field--left
        = f.label :calorie, "カロリー(kcal)", class: 'food-form__label' 
      .food-form__field--right
        = f.number_field :calorie, class: 'food_calorie food-form__input', placeholder: " カロリー (半角数字) を入力してください", required: "", min: "0", max: "10000"
      .food-form__field--left
        = f.label :carbohydrate, "糖質(g)", class: 'food-form__label'
      .food-form__field--right
        = f.number_field :carbohydrate, step: "0.1", class: 'food_carbohydrate food-form__input', placeholder: "  糖  質  (半角数字)) を入力してください", required: "", min: "0", max: "1000"
      .food-form__field--left
        = f.label :protein, "タンパク質(g)", class: 'food-form__label' 
      .food-form__field--right
        = f.number_field :protein, step: "0.1", class: 'food_protein food-form__input', placeholder: "タンパク質 (半角数字) を入力してください", required: "", min: "0", max: "1000"
      .food-form__field--left
        = f.label :fat, "脂質(g)", class: 'food-form__label' 
      .food-form__field--right
        = f.number_field :fat, step: "0.1", class: 'food_fat food-form__input', placeholder: "  脂  質  (半角数字) を入力してください", required: "", min: "0", max: "1000"
      .food-form__field--left
        = f.label :salt_equivalent, "食塩相当量(g)", class: 'food-form__label' 
      .food-form__field--right
        = f.number_field :salt_equivalent, step: "0.1", class: 'food_salt_equivalent food-form__input', placeholder: "食塩相当量 (半角数字) を入力してください", required: "", min: "0", max: "1000"
      .food-form__field--left
        = f.label :dietary_fiber, "食物繊維(g)", class: 'food-form__label' 
      .food-form__field--right
        = f.number_field :dietary_fiber, step: "0.1", class: 'food_dietary_fiber food-form__input', placeholder: "  食物繊維  (半角数字) を入力してください", min: "0", max: "1000"
      .food-form__field.clearfix
        .food-form__field--left
        .food-form__field--right
          = f.submit '更新', class: 'btn'
          = link_to '戻る', root_path, class: 'btn'
        